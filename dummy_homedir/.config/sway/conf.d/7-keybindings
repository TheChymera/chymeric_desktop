# Terminal
bindsym $mod+t exec $term
bindsym $mod+z exec $term2
bindsym $mod+q exec $term --class quick_command

# Science
bindsym $mod+Shift+n exec $Neuroimaging
bindsym $mod+n exec $neuroimaging

# Internet
bindsym $mod+d exec $downloads
bindsym $mod+w exec $web
bindsym $mod+l exec $term -e sh -c "links;sh"

# Graphics
bindsym $mod+g exec $graphic
bindsym $mod+m exec $modelling
bindsym $mod+p exec $paths

#Messaging
bindsym $mod+i exec $im
bindsym $mod+Shift+i exec $lab-im
bindsym $mod+c exec $term -e sh -c "weechat;sh"
bindsym $mod+Shift+t exec $term -e sh -c "toxic;sh"

# Mail
bindsym $mod+Shift+e exec $term -e sh -c "neomutt"

# Screen capture
bindsym $mod+Shift+s exec $screenpic
bindsym $mod+s exec $screenpic-select
bindsym $mod+Ctrl+Shift+s exec $screenvid
bindsym $mod+Ctrl+s exec $screenvid-select
bindsym $mod+Ctrl+x exec $screenvid-kill

# Idling
bindsym $mod+Shift+l exec swaylock

# Media
bindsym $mod+y exec $term --class pulsemixer_float -e sh -c "pulsemixer"
bindsym $mod+Shift+m exec $term -e sh -c "ncmpcpp;sh"

# Volume control
# for more fun with multimedia keys use wev ( gui-apps/wev ) to get codes of the type seen below
	bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
	bindsym XF86AudioLowerVolume exec amixer set Master 5%-
	bindsym XF86AudioMute exec amixer set Master toggle

	# find keys with `libinput debug-events --show-keycodes` â€” might be hit and miss
	bindsym xf86AudioPrev exec mpc prev
	bindsym xf86AudioNext exec mpc next
	bindsym xf86AudioPlay exec mpc toggle

